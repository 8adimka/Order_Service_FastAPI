# PostgreSQL - Common
POSTGRES_USER=postgres

# PostgreSQL - Auth Service
POSTGRES_AUTH_DB=authdb
POSTGRES_AUTH_PASSWORD=auth_password_change_in_prod_123
POSTGRES_AUTH_URL=postgresql://postgres:auth_password_change_in_prod_123@postgres_auth:5432/authdb

# PostgreSQL - Orders Service
POSTGRES_ORDERS_DB=ordersdb
POSTGRES_ORDERS_PASSWORD=orders_password_change_in_prod_456
POSTGRES_ORDERS_URL=postgresql://postgres:orders_password_change_in_prod_456@postgres_orders:5432/ordersdb

# JWT Settings - Auth Service (RS256)
AUTH_ALGORITHM=RS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30
# Приватный ключ для подписи токенов (можно задать через переменную или использовать файл)
# AUTH_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...

# JWT Settings - Orders Service (RS256 для валидации токенов из Auth)
ORDERS_ALGORITHM=RS256
# Публичный ключ для проверки токенов (можно задать через переменную или использовать файл)
# ORDERS_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\n...

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:29092

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_LIMITER_URL=redis://redis:6379/2

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Environment
ENVIRONMENT=development

